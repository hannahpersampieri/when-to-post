{
  "manifest_version": 2,

  "name": "When to Post",
  "description": "This extension allows users to find the optimal time to post in order to reach a larger audience",
  "version": "1.0",

   "page_action": {
          "default_icon": {                   
            "19": "icon.jpg",          
            "38": "icon.jpg"            
          },
          "default_title": "When to post",     
          "default_popup": "popup.html"       
        }
"permissions": [
    "https://www.facebook.com/",
    "http://www.facebook.com/",
    "http://graph.facebook.com/"
    "tabs",
    "storage"
  ],
  
  "background": {
    "scripts": ["bootstrap.js"],
    "persistent": false
  },

   "content_scripts": [
    {
      "matches": ["http://*.facebook.com/*", "https://*.facebook.com/*"],
      "js": ["libs/underscore.min.js", "clean.js"]
    }
  ],

}
