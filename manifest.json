{
  "manifest_version": 2,

  "name": "When to Post",
  "description": "This extension allows users to find the optimal time to post in order to reach a larger audience",
  "version": "1.0",
  
  "background": {
    "scripts": [when_to_post/bootstrap.js],
    "persistent": false
    }

   "page_action": {
          "default_icon": {                   
            "19": "icon.png",          
            "38": "icon.png"            
          },
          "default_title": "When to post",     
          "default_popup": "popup.html"       
        }
  "permissions": [
    "activeTab"
    "tabs"
    "http://www.facebook.com/"
  ],
}
